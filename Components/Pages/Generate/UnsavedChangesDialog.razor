@using MudBlazor

<MudDialog>
    <DialogContent>
        <MudText>You have unsaved changes. Are you sure you want to leave this page? All unsaved changes will be lost.</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Stay</MudButton>
        <MudButton Color="Color.Error" OnClick="Confirm">Leave</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = null!;

    private void Cancel() => MudDialog.Cancel();
    private void Confirm() => MudDialog.Close(DialogResult.Ok(true));
}
