<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Fiszki</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link d-flex align-items-center gap-2 py-2" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill fs-5" aria-hidden="true"></span>
                <span>Home</span>
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link d-flex align-items-center gap-2 py-2" href="counter">
                <span class="bi bi-plus-square-fill fs-5" aria-hidden="true"></span>
                <span>Counter</span>
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link d-flex align-items-center gap-2 py-2" href="weather">
                <span class="bi bi-list-nested fs-5" aria-hidden="true"></span>
                <span>Weather</span>
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link d-flex align-items-center gap-2 py-2" href="nowa">
                <span class="bi bi-lightning-fill fs-5" aria-hidden="true"></span>
                <span>Nowa</span>
            </NavLink>
        </div>
        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link d-flex align-items-center gap-2 py-2" href="flashcards">
                        <span class="bi bi-collection fs-5" aria-hidden="true"></span>
                        <span>Flashcards</span>
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link d-flex align-items-center gap-2 py-2" href="generate">
                        <span class="bi bi-lightning-fill fs-5" aria-hidden="true"></span>
                        <span>Generate</span>
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <button class="nav-link btn btn-link d-flex align-items-center gap-2 py-2" @onclick="Logout">
                        <span class="bi bi-box-arrow-right fs-5" aria-hidden="true"></span>
                        <span>Logout</span>
                    </button>
                </div>
            </Authorized>
            <NotAuthorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link d-flex align-items-center gap-2 py-2" href="login">
                        <span class="bi bi-box-arrow-in-right fs-5" aria-hidden="true"></span>
                        <span>Login</span>
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </nav>
</div>

<style>
/* Wyrównanie ikon do środka w poziomie i pionie */
.nav-link .bi { line-height: 1; display: inline-flex; align-items: center; }
</style>

@code {
    [Inject] private Microsoft.AspNetCore.Components.NavigationManager Nav { get; set; } = default!;
    [Inject] private AuthenticationStateProvider AuthStateProvider { get; set; } = default!;

    private void Logout()
    {
        if (AuthStateProvider is Fiszki.Services.Services.CustomAuthStateProvider custom)
        {
            custom.MarkUserAsLoggedOut();
        }
        Nav.NavigateTo("/");
    }
}
